{{#extends 'base'}}

{{#block 'content'}}
<a href="/users/register" class="btn btn-success mt-3">create User</a> 
<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td>
                {{this.id}}
            </td>
            <td>
                {{this.firstname}}
            </td>
            <td>
                {{this.lastname}}
            </td>
            <td>
                {{this.email}}
            </td>
            <td>
                {{this.address}}
            </td>
            <td>
                {{this.role}}
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}

{{/extends}}